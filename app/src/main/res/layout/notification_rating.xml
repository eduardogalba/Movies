<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/not_rating_tv"
        android:text="¿Qué te parece nuestra app?"
        android:textAlignment="center">

    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/star_1"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:contentDescription="Star 1"
            android:src="@drawable/baseline_star_outline_24" />

        <ImageView
            android:id="@+id/star_2"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:contentDescription="Star 2"
            android:src="@drawable/baseline_star_outline_24" />

        <ImageView
            android:id="@+id/star_3"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:contentDescription="Star 3"
            android:src="@drawable/baseline_star_outline_24" />

        <ImageView
            android:id="@+id/star_4"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:contentDescription="Star 4"
            android:src="@drawable/baseline_star_outline_24" />

        <ImageView
            android:id="@+id/star_5"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:contentDescription="Star 5"
            android:src="@drawable/baseline_star_outline_24" />
    </LinearLayout>
</LinearLayout>